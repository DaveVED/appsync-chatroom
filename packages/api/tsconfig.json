{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
      "declaration": true,
      "module": "nodenext",
      "target": "esnext",
      "moduleResolution": "nodenext",
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "types": [
        "bun-types" // add Bun global
      ],
    "include": ["src"],
    "exclude": ["test", "dist"]
  }
  